   <y>0.0</y>
   <z>0.0</z>
  </axis>
 </animation>
 <animation>
  <type>slider</type>
  <object-name>parkBrake</object-name>
  <drag-direction>vertical</drag-direction>
  <value>1</value>
  <action>
   <binding>
    <command>property-adjust</command>
    <property>controls/gear/brake-parking</property>
    <factor>-1</factor>
   </binding>
  </action>
  <hovered>
