  <drag-direction>vertical</drag-direction>
  <value>1.0</value>
  <action>
   <binding>
    <command>property-adjust</command>
    <property>controls/engines/engine[0]/mixture</property>
    <factor>0.1</factor>
   </binding>
  </action>
  <hovered>
