<?xml version="1.0"?>

<PropertyList>

 <path>fuelgauge.ac</path>

 <animation>
  <type>material</type>
  <object-name>bug</object-name>
  <object-name>tubeglass</object-name>   
  <emission>
   <red>1.0</red>
   <green>0.2</green>
   <blue>0.0</blue>
   <factor-prop>systems/electrical/outputs/instrument-lights-norm</factor-prop>
  </emission>
 </animation>

 <animation> 
  <type>translate</type>
  <object-name>bug</object-name>
  <property>/consumables/fuel/tank/level-gal_us</property>
  <factor>0.044</factor><!-- 1/(5*capacity-gal_us) -->
  <axis> 
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>         
 
</PropertyList>
